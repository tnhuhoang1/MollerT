<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.tnh.mollert.boardDetail.BoardDetailFragmentViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/two_action_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/board_detail_fragment_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/board_detail_fragment_search_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/board_detail_fragment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_8"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxBackgroundColor="#F1EEFB"
            app:endIconDrawable="@drawable/outline_search_24"
            app:endIconMode="custom"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/board_detail_fragment_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_card"
                android:textColorHint="@color/highlightStrokeColor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/board_detail_fragment_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/board_detail_fragment_recyclerview"
            app:layout_constraintEnd_toEndOf="@id/board_detail_fragment_recyclerview"
            app:layout_constraintTop_toTopOf="@id/board_detail_fragment_recyclerview"
            app:layout_constraintBottom_toBottomOf="@id/board_detail_fragment_recyclerview"
            android:scaleType="fitXY"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:elevation="@dimen/dimen_8"
            android:id="@+id/board_detail_fragment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board_detail_fragment_search_box" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
