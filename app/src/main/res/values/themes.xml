<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MollerT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- don't set layout margin width and height   -->
    <style name="Theme.MollerT.ExpandedYellowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/highlightYellow</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_20</item>
        <item name="android:paddingBottom">@dimen/dimen_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Theme.MollerT.ExpandedOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_20</item>
        <item name="android:paddingBottom">@dimen/dimen_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:strokeColor">@color/highlightStrokeColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
    </style>

    <style name="Theme.MollerT.CommonToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.MollerT.CommonEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:paddingStart">@dimen/dimen_18</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_17</item>
        <item name="android:maxLength">50</item>
        <item name="android:paddingBottom">@dimen/dimen_17</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/lightGrayHintText</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
    </style>

    <style name="Theme.MollerT.CommonLabelText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/lightGrayLabelText</item>
    </style>
</resources>